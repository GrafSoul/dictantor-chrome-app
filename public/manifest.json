{
  "name": "Dictantor",
  "description": "Chrome App for Speech to Text using React.js and Web Speech API.",
  "manifest_version": 2,
  "minimum_chrome_version": "23",
  "version": "0.1.0",
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "permissions" : [
    "clipboardWrite",
    "clipboardRead",
    "audioCapture",
    "https://mail.google.com/"
  ],
  "icons": {
    "16": "assets/icon-16x16.png",
    "128": "assets/icon-128x128.png"
  }
}
